<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="650.0" stylesheets="@popUpStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.questionPopControl">
    <VBox alignment="CENTER_LEFT" prefHeight="413.0" prefWidth="650.0" spacing="10.0" styleClass="bodybg" stylesheets="@popUpStyle.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Create Question:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="questionTextField" prefHeight="49.0" prefWidth="630.0" promptText="Write new question here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Correct answer:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="correctAnswerTextField" prefHeight="49.0" prefWidth="630.0" promptText="Write the correct answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Other answers:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="optionOneTextField" prefHeight="49.0" prefWidth="630.0" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionTwoTextField" prefHeight="49.0" prefWidth="630.0" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionThreeTextField" prefHeight="49.0" prefWidth="630.0" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="finishButton" prefHeight="49.0" prefWidth="630.0" styleClass="finish_button" stylesheets="@popUpStyle.css" text="Finish">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
        </children>
        <padding>
            <Insets left="30.0" right="30.0" top="20.0" />
        </padding>
    </VBox>
</AnchorPane>
