<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="650.0" stylesheets="@popUpStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.questionPopControl">
    <VBox spacing="10.0" styleClass="bodybg" stylesheets="@popUpStyle.css" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
        <children>
            <Label styleClass="GameName_font" text="Create Question:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="questionTextField" promptText="Write new question here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="cpu_Font" text="Correct answer:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="correctAnswerTextField" promptText="Write the correct answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="cpu_Font" text="Other answers:">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="optionOneTextField" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionTwoTextField" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionThreeTextField" promptText="Write a wrong answer here" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="finishButton" styleClass="finish_button" stylesheets="@popUpStyle.css" text="Finish">
                <VBox.margin>
                    <Insets bottom="10.0" />
                </VBox.margin>
            </Button>
        </children>
    </VBox>
</AnchorPane>
