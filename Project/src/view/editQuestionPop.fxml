<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="300.0" prefWidth="650.0" stylesheets="@popUpStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.questionPopControl">
    <VBox spacing="10.0" styleClass="bodybg" stylesheets="@popUpStyle.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <children>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Edit Question:">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="questionTextField" styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Correct answer:">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="correctAnswerTextField" promptText="Enter the correct answer..." styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <Label styleClass="pop_font" stylesheets="@popUpStyle.css" text="Other answers:">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="optionOneTextField" promptText="Enter answer option 1..." styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionTwoTextField" promptText="Enter answer option 2..." styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <TextField fx:id="optionThreeTextField" promptText="Enter answer option 3..." styleClass="cpu_Font">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </TextField>
            <Button fx:id="saveButton" styleClass="finish_button" stylesheets="@popUpStyle.css" text="Save">
                <VBox.margin>
                    <Insets bottom="10.0" left="250.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <!-- Add any other buttons or UI elements you need here -->
        </children>
      <padding>
         <Insets left="30.0" right="30.0" top="20.0" />
      </padding>
    </VBox>
</AnchorPane>
