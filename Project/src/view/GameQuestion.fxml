<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="300.0" prefWidth="650.0" stylesheets="@popUpStyle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.questionPopControl">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="413.0" prefWidth="650.0" spacing="10.0" styleClass="bodybg" stylesheets="@popUpStyle.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="QuestionTitle" alignment="CENTER" contentDisplay="CENTER" styleClass="pop_font" stylesheets="@popUpStyle.css" text="Easy Question:">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextFlow fx:id="questionTextBox" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </TextFlow>
            <Label fx:id="chooseAnswerTitle" styleClass="pop_font" stylesheets="@popUpStyle.css" text="choose answer:">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <RadioButton fx:id="answerOne" mnemonicParsing="false" text="Hello I'm number 1" />
            <RadioButton fx:id="answerTwo" mnemonicParsing="false" text="Hello I'm number 2" />
            <RadioButton fx:id="answerThree" mnemonicParsing="false" text="Hello I'm number 3" />
            <RadioButton fx:id="answerFour" mnemonicParsing="false" text="Hello I'm number 4" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="checkAnswerButton" prefHeight="49.0" prefWidth="630.0" styleClass="finish_button" stylesheets="@popUpStyle.css" text="check answer" />
                  <TextFlow fx:id="answerTextBox" prefHeight="46.0" prefWidth="805.0" style="-fx-background-color: white;" />
               </children>
            </HBox>
            <Pane prefHeight="200.0" prefWidth="590.0">
               <padding>
                  <Insets bottom="15.0" />
               </padding>
            </Pane>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
