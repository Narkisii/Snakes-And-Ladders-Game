                        <Button fx:id="checkAnswerButton" prefHeight="49.0" prefWidth="630.0" styleClass="checkButton" stylesheets="@Buttons.css" text="check answer" />
                        <TextFlow fx:id="answerTextBox" prefHeight="46.0" prefWidth="805.0" style="-fx-background-color: white;" HBox.hgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </center>
   <top>
      <Pane prefHeight="59.0" prefWidth="690.0">
