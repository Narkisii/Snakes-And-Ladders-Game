                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <RadioButton fx:id="answerOne" mnemonicParsing="false" styleClass="radioAnswers" text="Hello I'm number 1">
                     <VBox.margin>
                        <Insets left="5.0" />
                     </VBox.margin></RadioButton>
                  <RadioButton fx:id="answerTwo" mnemonicParsing="false" styleClass="radioAnswers" text="Hello I'm number 2">
                     <VBox.margin>
                        <Insets left="5.0" />
