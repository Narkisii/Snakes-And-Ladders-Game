            <Label fx:id="QuestionTitle" alignment="CENTER" contentDisplay="CENTER" layoutX="220.0" layoutY="12.0" prefWidth="250.0" styleClass="title" stylesheets="@popUpStyle.css" text="Easy Question:" />
