<BorderPane prefHeight="720.0" prefWidth="1280.0" styleClass="bodybg" stylesheets="@resources/Css/all_Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.PlayersControl">
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="return_Btn" fx:id="return_Btn" mnemonicParsing="false" styleClass="Normal_button" stylesheets="@resources/Css/Buttons.css" text="Return">
               <font>
                  <Font size="34.0" />
               </font>
            </Button>
            <Button id="start_game_Btn" fx:id="start_game_Btn" mnemonicParsing="false" styleClass="Normal_button" stylesheets="@resources/Css/Buttons.css" text="Start Game">
               <font>
                  <Font size="34.0" />
               </font>
               <HBox.margin>
                  <Insets left="100.0" />
               </HBox.margin>
            </Button>
            <Pane prefHeight="109.0" prefWidth="470.0" />
            <Pane prefHeight="109.0" prefWidth="100.0">
               <children>
                  <ImageView fx:id="soundOn_Icon" fitHeight="99.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="sound_Button">
                     <image>
                        <Image url="@Images/sound-on.png" />
                     </image>
                  </ImageView>
                  <ImageView fx:id="soundOff_Icon" fitHeight="88.0" fitWidth="79.0" pickOnBounds="true" preserveRatio="true" styleClass="sound_Button" visible="false">
                     <image>
                        <Image url="@Images/sound-off.png" />
                     </image>
                  </ImageView>
               </children>
            </Pane>
         </children>
      </HBox>
   </bottom>
     <center>
      <ScrollPane fx:id="PlayersPane" stylesheets="@resources/Css/all_Style.css" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </BorderPane.margin>
         <content>
            <VBox fx:id="playerContainer" alignment="CENTER" prefHeight="519.0" prefWidth="876.0" styleClass="scrolPane_bg" stylesheets="@resources/Css/all_Style.css" /> <!-- Change AnchorPane to VBox -->
         </content>
      </ScrollPane>
   </center>

   <top>
      <Pane prefHeight="174.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" layoutY="-1.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="174.0" prefWidth="1280.0" styleClass="GameName_font" stylesheets="@resources/Css/all_Style.css" text="Players:" />
         </children>
      </Pane>
   </top>
   <right>
      <Pane prefHeight="386.0" prefWidth="342.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="return_Btn" fx:id="add_CPU" mnemonicParsing="false" styleClass="Normal_button" stylesheets="@resources/Css/Buttons.css" text="Add CPU">
               <font>
                  <Font size="34.0" />
               </font>
            </Button>
            <Button id="return_Btn" fx:id="remove_Cpu" layoutY="88.0" mnemonicParsing="false" styleClass="Normal_button" stylesheets="@resources/Css/Buttons.css" text="Remove CPU">
               <font>
                  <Font size="34.0" />
               </font>
            </Button>
         </children>
      </Pane>
   </right>
</BorderPane>
